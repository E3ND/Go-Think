<div class="home-header">
    {{#if search}}
        <h1>Você está buscando por: <span>{{search}}</span> </h1>
        {{#if thinksQty}}
            <p>Foram encontrados <span>{{thinksQty}}</span> pensamentos</p>
        {{else}}
            <p>Nenhum pensamento foi encontrado com o termo <span>{{search}}</span></p>
        {{/if}}
    {{else}}
        <h1>Conheça alguns dos <span>pensamentos</span></h1>
    {{/if}}
    <h1>Todos os pensamentos</h1>
    <form action="/" method="GET">
        <input type="text" name="search" placeholder="Está buscando por algo?">
        <input type="submit" class="btn" value="Buscar">
    </form>
    <div class="order-container">
        <span>Ordernar por:</span>
        <form action="/" method="GET">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit"><i class="bi bi-arrow-up"></i></button>
        </form>
        <form action="/" method="GET">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="old">
            <button type="submit"><i class="bi bi-arrow-down"></i></button>
        </form>
        <a href="/">Limpar</a>
    </div>
</div>
<div class="think-container">
    {{#each thinks}}
        <figure>
            <blockquote>
                <a href="/answers/allAnswer/{{this.id}}"><p>{{this.title}}</p></a>
            </blockquote>
            <blockquote>
                {{#if this.image}}
                    <a href="{{this.image}}" target="_blank"> <img src="{{this.image}}"/></a>
                {{/if}} 
            </blockquote>
            <figcaption>Por <span>{{this.User.name}}</span></figcaption>
        </figure>
    {{/each}}
</div>

