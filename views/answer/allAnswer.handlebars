<div class="think-container">
    {{#each answers}}
        <figure>
            <blockquote>
                <p>{{this.answerText}}</p>
            </blockquote>
            <blockquote>
                {{#if this.answerImage}}
                    <a href="http://localhost:3333/{{this.answerImage}}" target="_blank"> <img src="../../{{this.answerImage}}"/></a>
                {{/if}} 
            </blockquote>
            <figcaption>Por <a href="#"><span>{{this.[User.name]}}</span></a></figcaption>
        </figure>
    {{/each}}
</div>